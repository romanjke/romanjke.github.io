mixin portfolio-modal(work, id)
    // Portfolio modal
    .portfolio-modal.modal.fade(id=id role="dialog")
        .modal-dialog.modal-lg.modal-dialog-centered
            // Modal content
            .modal-content
                .modal-header
                    h4(class="portfolio-modal__title modal-title")= work.name
                    button(type="button" class="close" data-dismiss="modal") &times;

                .modal-body
                    img(src="img/" + work.img class="portfolio-modal__image" alt=work.name)

                    dl
                        dt Ссылка:
                        dd: a(href=work.link target="_blank")= work.link

                        dt Описание:
                        dd !{work.desc}

                        dt Платформа:
                        dd: i= work.platform

                        if work.role
                            dt Моя роль:
                            dd !{work.role}

                        if work.source
                            dt Исходники:
                            dd: a(href=work.source target="_blank")= work.source


                .modal-footer
                    button(type="button" class="portfolio-modal__button btn btn-light" data-dismiss="modal") Закрыть
            // Modal content end
    // Portfolio modal end